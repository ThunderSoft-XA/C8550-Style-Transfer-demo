<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/permissions_fragment">

    <fragment
        android:id="@+id/permissions_fragment"
        android:name="org.tensorflow.lite.examples.styletransfer.fragments.PermissionsFragment"
        android:label="PermissionsFragment">

        <action
            android:id="@+id/action_permissions_to_select_image"
            app:destination="@id/select_image_fragment"
            app:popUpTo="@id/permissions_fragment"
            app:popUpToInclusive="true" />

    </fragment>


    <fragment
        android:id="@+id/select_image_fragment"
        android:name="org.tensorflow.lite.examples.styletransfer.fragments.SelectImageFragment"
        android:label="ImageFragment">

        <action
            android:id="@+id/action_select_image_to_permissions"
            app:destination="@id/permissions_fragment" />
        <action
            android:id="@+id/action_select_image_fragment_to_transformation_fragment"
            app:destination="@id/transformation_fragment" />
    </fragment>


    <fragment
        android:id="@+id/transformation_fragment"
        android:name="org.tensorflow.lite.examples.styletransfer.fragments.TransformationFragment"
        android:label="fragment_transformation"
        tools:layout="@layout/fragment_transformation">
        <action
            android:id="@+id/action_transformation_fragment_to_select_image_fragment"
            app:destination="@id/select_image_fragment" />
    </fragment>
</navigation>
